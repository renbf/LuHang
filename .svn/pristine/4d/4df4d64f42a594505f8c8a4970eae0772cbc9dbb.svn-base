<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <android.support.v7.widget.LinearLayoutCompat
        style="@style/padding_start_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <android.support.v7.widget.ContentFrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_message_type"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35" />

            <View
                android:id="@+id/view_msg"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:layout_gravity="end"
                android:background="@drawable/shape_message_msg" />
        </android.support.v7.widget.ContentFrameLayout>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_message_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="隐患验收" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_message_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:textColor="@color/color_text_light"
                android:textSize="@dimen/sp_12"
                tools:text="已安排你来处理隐患验收" />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_msg_time"
            android:layout_width="@dimen/dp_55"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_light"
            android:textSize="@dimen/sp_10"
            tools:text="2019-04-20" />
    </android.support.v7.widget.LinearLayoutCompat>

    <View
        style="@style/margin_start_end"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_window" />
</android.support.v7.widget.LinearLayoutCompat>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.ContentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/img_user_center" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="@dimen/top_bar_height"
                android:layout_marginBottom="@dimen/dp_15"
                android:paddingTop="@dimen/status_bar_height"
                app:contentInsetStart="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/TopBarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="我的"
                        android:textColor="@android:color/white" />

                    <android.support.v7.widget.ContentFrameLayout
                        android:id="@+id/msg_layout"
                        style="@style/padding_start_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/dp_5"
                            android:paddingBottom="@dimen/dp_5"
                            android:src="@mipmap/ic_message_white" />

                        <View
                            android:id="@+id/view_msg"
                            android:layout_width="@dimen/dp_7"
                            android:layout_height="@dimen/dp_7"
                            android:layout_gravity="end"
                            android:background="@drawable/shape_user_msg"
                            android:visibility="gone" />
                    </android.support.v7.widget.ContentFrameLayout>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_user_avatar"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_weight="1" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:minWidth="@dimen/dp_100"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_15"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_15"
                tools:text="张三" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_user_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_15"
                android:textColor="@android:color/white"
                android:minWidth="@dimen/dp_100"
                android:gravity="center"
                tools:text="销售部门：销售经理" />
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.ContentFrameLayout>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_exam"
        style="@style/padding_start_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:drawableStart="@mipmap/ic_user_exam"
        android:drawableEnd="@mipmap/ic_triangle"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center_vertical"
        android:text="我的考卷" />

    <View
        style="@style/margin_start_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_window" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_course"
        style="@style/padding_start_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:drawableStart="@mipmap/ic_user_course"
        android:drawableEnd="@mipmap/ic_triangle"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center_vertical"
        android:text="我的课程" />

    <View
        style="@style/margin_start_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_window" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_collection"
        style="@style/padding_start_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:drawableStart="@mipmap/ic_user_collection"
        android:drawableEnd="@mipmap/ic_triangle"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center_vertical"
        android:text="我的收藏" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_window" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_auth"
        style="@style/padding_start_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:drawableStart="@mipmap/ic_user_auth"
        android:drawableEnd="@mipmap/ic_triangle"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center_vertical"
        android:text="照片认证" />

    <View
        style="@style/margin_start_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_window" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_setting"
        style="@style/padding_start_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:drawableStart="@mipmap/ic_user_setting"
        android:drawableEnd="@mipmap/ic_triangle"
        android:drawablePadding="@dimen/dp_8"
        android:gravity="center_vertical"
        android:text="系统设置" />

    <View
        style="@style/margin_start_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_window" />

</android.support.v7.widget.LinearLayoutCompat>
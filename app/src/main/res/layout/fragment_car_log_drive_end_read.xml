<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_8"
                android:background="@color/color_window" />

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/end_check_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/color_window" />

            <!--故障处理-->
            <android.support.v7.widget.LinearLayoutCompat
                style="@style/padding_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:text="故障处理"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_end_fault_handling"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_14" />
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_window" />


            <!--签名-->
            <android.support.constraint.ConstraintLayout
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_end_sign"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="驾驶员签名"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_end_sign"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/dp_15"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_user_sign"
                    app:layout_constraintDimensionRatio="h,215:120"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_end_sign"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_window" />


            <!--始发站-->
            <android.support.v7.widget.LinearLayoutCompat
                style="@style/padding_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:text="始发站"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_end_start_check_site"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_14" />
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_window" />
            <!--例检情况-->
            <android.support.v7.widget.LinearLayoutCompat
                style="@style/padding_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:text="例检情况"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_end_start_check_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_14" />
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_window" />
            <!--途中例检-->
            <android.support.v7.widget.LinearLayoutCompat
                style="@style/padding_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:text="途中例检"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_end_middle_check_site"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_14" />
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_window" />
            <!--例检情况-->
            <android.support.v7.widget.LinearLayoutCompat
                style="@style/padding_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:text="例检情况"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_end_middle_check_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_14" />
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_window" />

            <!--行车照片-->
            <android.support.v7.widget.LinearLayoutCompat
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="行车照片"
                    android:textSize="@dimen/sp_16"
                    tools:ignore="HardcodedText" />

                <com.gfc.library.widget.grid.ScrollGridView
                    android:id="@+id/end_car_grid_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:horizontalSpacing="@dimen/dp_15"
                    android:numColumns="2"
                    android:verticalSpacing="@dimen/dp_15">

                </com.gfc.library.widget.grid.ScrollGridView>
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_window" />
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/lib_loading_layout" />

</android.support.v7.widget.ContentFrameLayout>
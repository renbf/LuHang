<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.ContentFrameLayout
        android:id="@+id/container_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/nav_bar_height" />

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/nav_bar_height"
        android:background="@drawable/actionbar_shadow_up" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:gravity="bottom"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_home"
            style="@style/app_main_text"
            android:drawableTop="@drawable/selector_app_ic_home"
            android:text="首页" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_check"
            style="@style/app_main_text"
            android:drawableTop="@drawable/selector_app_ic_check"
            android:text="检查" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_train"
            style="@style/app_main_text"
            android:drawableTop="@drawable/selector_app_ic_train"
            android:text="培训" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_log"
            style="@style/app_main_text"
            android:drawableTop="@drawable/selector_app_ic_log"
            android:text="日志" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_user"
            style="@style/app_main_text"
            android:drawableTop="@drawable/selector_app_ic_user"
            android:text="我的" />
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.v7.widget.ContentFrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_window" />

            <android.support.v7.widget.LinearLayoutCompat
                style="@style/padding_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_bi_tian"
                    android:drawablePadding="@dimen/dp_3"
                    android:gravity="center_vertical"
                    android:text="填写日期"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_in_fill_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:gravity="center_vertical|end"
                    tools:text="2019-04-18" />
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_window" />

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/in_check_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/color_window" />
            <!--换驾、休息地点-->
            <android.support.v7.widget.LinearLayoutCompat
                style="@style/padding_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dp_120"
                    android:layout_height="wrap_content"
                    android:text="换驾、休息地点"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_in_change_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:hint="请输入内容"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_14" />
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_window" />
            <!--停车时间-->
            <android.support.v7.widget.LinearLayoutCompat
                style="@style/padding_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:text="停车时间"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_in_car_stop_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:gravity="center_vertical|end"
                    android:hint="请选择停车时间"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="HardcodedText" />
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_window" />

            <!--休息地点-->
            <android.support.v7.widget.LinearLayoutCompat
                style="@style/padding_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:text="休息地点"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_in_rest_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@null"
                    android:gravity="center_vertical|end"
                    android:hint="请输入休息地点"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_14" />
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_window" />
            <!--发车时间-->
            <android.support.v7.widget.LinearLayoutCompat
                style="@style/padding_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:text="发车时间"
                    android:textSize="@dimen/sp_16" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_in_car_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:gravity="center_vertical|end"
                    android:hint="请选择发车时间"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="HardcodedText" />
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_window" />
            <!--故障处理-->
            <android.support.v7.widget.LinearLayoutCompat
                style="@style/padding_start_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="故障处理"
                    android:textSize="@dimen/sp_16"
                    tools:ignore="HardcodedText" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_in_fault_handling"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@null"
                    android:gravity="end"
                    android:hint="请输入内容"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="HardcodedText" />
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_window" />
            <!--行车照片-->
            <android.support.v7.widget.LinearLayoutCompat
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="行车照片"
                    android:textSize="@dimen/sp_16"
                    tools:ignore="HardcodedText" />

                <com.gfc.library.widget.grid.ScrollGridView
                    android:id="@+id/in_car_grid_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:horizontalSpacing="@dimen/dp_15"
                    android:numColumns="2"
                    android:verticalSpacing="@dimen/dp_15">

                </com.gfc.library.widget.grid.ScrollGridView>
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_window" />

            <!--签名-->
            <android.support.constraint.ConstraintLayout
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_in_sign"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_bi_tian"
                    android:drawablePadding="@dimen/dp_3"
                    android:gravity="center_vertical"
                    android:text="签名"
                    android:textSize="@dimen/sp_16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="HardcodedText" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_in_sign"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/dp_15"
                    android:src="@mipmap/ic_user_sign"
                    app:layout_constraintDimensionRatio="h,215:120"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_in_sign"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <View
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_window" />
            <!--交接时间-->
            <android.support.v7.widget.LinearLayoutCompat
                style="@style/padding_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:text="交接时间"
                    android:textSize="@dimen/sp_16"
                    tools:ignore="HardcodedText" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_in_handover_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:gravity="center_vertical|end"
                    android:textSize="@dimen/sp_14" />
            </android.support.v7.widget.LinearLayoutCompat>


            <View
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_window" />
            <!--备注-->
            <android.support.v7.widget.LinearLayoutCompat
                style="@style/padding_start_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15">

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="备注"
                    android:textSize="@dimen/sp_16"
                    tools:ignore="HardcodedText" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_in_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_15"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:lineSpacingExtra="@dimen/dp_3"
                    android:textSize="@dimen/sp_14"
                    tools:ignore="HardcodedText" />
            </android.support.v7.widget.LinearLayoutCompat>

            <View
                style="@style/margin_start_end"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginBottom="@dimen/dp_15"
                android:background="@color/color_window" />

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v4.widget.NestedScrollView>

    <include layout="@layout/lib_loading_layout" />


</android.support.v7.widget.ContentFrameLayout>
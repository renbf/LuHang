<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingTop="15dp"
    android:paddingEnd="15dp">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_check_project_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <RadioGroup
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="end"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_pass_through"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:button="@null"
                android:drawableStart="@drawable/selector_check_box_c"
                android:drawablePadding="@dimen/dp_5"
                android:text="通过"
                tools:ignore="HardcodedText" />

            <RadioButton
                android:id="@+id/rb_no_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableStart="@drawable/selector_check_box_c"
                android:drawablePadding="@dimen/dp_5"
                android:text="不通过"
                tools:ignore="HardcodedText" />

        </RadioGroup>
    </android.support.v7.widget.LinearLayoutCompat>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rb_pass_through"
        android:layout_marginTop="15dp"
        android:background="@color/color_window" />
</android.support.v7.widget.LinearLayoutCompat>